### Personal Servers ###

Host ybtheta
	User thetatau
	Hostname ssh.thetatauodu.com

### Others ###
Host dev.pleaseignore.com
	IdentityFile ~/.ssh/id_rsa_pleaseignore

Host bitbucket.org
	IdentitiesOnly yes
	IdentityFile ~/.ssh/id_ecdsa_bitbucket
	IdentityFile ~/.ssh/id_ed25519_bitbucket
	IdentityFile ~/.ssh/id_rsa_bitbucket
	IdentityFile ~/.ssh/id_dsa_bitbucket

Host github.com
	IdentitiesOnly yes
	IdentityFile ~/.ssh/id_ecdsa_github
	IdentityFile ~/.ssh/id_ed25519_github
	IdentityFile ~/.ssh/id_rsa_github
	IdentityFile ~/.ssh/id_dsa_github

### Local Devices ###

Host *.local 10.* 172.16.* 172.17.* 172.18.* 172.19.* 172.2?.* 172.30.* 172.31.* 192.168.*
	CheckHostIP no
	StrictHostKeyChecking no
	UserKnownHostsFile /dev/null
	ForwardAgent yes

### Global Config ***
Host *
ifdef(`SSH_HAS_CONTROL_MASTER',
`	ControlMaster auto
	ControlPath /tmp/ssh_mux_%l_%h_%p_%r',
)
ifdef(`SSH_HAS_CONTROL_PERSIST',
`	ControlPersist 15m'
)
	CheckHostIP yes
ifdef(`SSH_HAS_EXIT_ON_FORWARD_FAILURE',
`	ExitOnForwardFailure yes'
)
# Automatically add SSH keys from the Keychain on macOS
IgnoreUnknown UseKeychain
UseKeychain yes
